@model ProjektSWR.Models.IndexViewModel
@Styles.Render("~/Content/UPPS/one.css")
<center><h1>@ViewBag.Message</h1></center>
<div id="mainbeam">
    <h3>Dane osobowe:</h3>
</div>
<div id="space">
    <div id="pool">
        <p>
            <div id="text">Imię:</div>
            <div id="textfield"><input type="text" name="imie"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">Nazwisko:</div>
            <div id="textfield"><input type="text" name="nazwisko"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">Nr telefonu:</div>
            <div id="textfield"><input type="text" name="tel"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">E-mail:</div>
            <div id="textfield"><input type="text" name="mail"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">St. naukowy:</div>
            <div id="textfield"><input type="text" name="stopien"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">Wydział:</div>
            <div id="textfield"><input type="text" name="wydz"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">Katedra:</div>
            <div id="textfield"><input type="text" name="kat"></div>
        </p>
    </div>
    <div id="buttons">
        <p>
            <input type="submit" value="Zatwierdź" />
            <input type="submit" value="Anuluj" />
        </p>
    </div>
</div>
<div id="mainbeam">
    <h3>Dane osobowe (opcjonalnie):</h3>
</div>
<div id="space">
    <div id="pool">
        <p>
            <div id="text">Opis:</div>
            <div id="textfield"><input type="text" name="opis"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text">Data urodzenia:</div>
            <div id="textfield"><input type="text" name="date"></div>
        </p>
    </div>
    <div id="pool">
        <p>
            <div id="text" style="padding-bottom: 5px">Zdjęcie:</div>
            <div id="photo" style="float: left;"></div>
            <div style="clear: both; padding-left: 125px; padding-top: 4px; float: left;" />
            <div id="buttons">
                <input type="submit" value="Dodaj" />
                <input type="submit" value="Usuń" />
            </div>
        </p>
    </div>
    <div id="buttons">
        <p>
            <input type="submit" value="Zatwierdź" />
            <input type="submit" value="Anuluj" />
        </p>
    </div>
</div>
<div id="mainbeam">
    <h3>Zmiana hasła:</h3>
</div>
<div id="space">
    <dl class="dl-horizontal">
        <dt>Hasło:</dt>
        <dd>
            [
            @Html.ActionLink("Zmień hasło", "ChangePassword")
            ]
        </dd>
    </dl>
</div>